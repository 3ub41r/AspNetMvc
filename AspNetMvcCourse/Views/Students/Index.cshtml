@model IEnumerable<AspNetMvcCourse.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div>
    @using (Html.BeginForm("Index", "Students", FormMethod.Get))
    {
        <div class="form-group">
            @Html.Label("MatricNumberList", "Matric Number")
            @*<label for="MatricNumberList">Matric Number</label>*@
            @Html.DropDownList("MatricNumberList", (SelectList) ViewBag.MatricNumberList, "All", new {@class = "form-control"})
        </div>
        <div class="form-group">
            <label>Keyword</label>
            @Html.TextBox("searchString", @Request.QueryString["searchString"], new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-primary">Filter</button>
    }
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IcNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MatricNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IcNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MatricNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfBirth)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
